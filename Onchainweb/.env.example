# ============================================
# SNIPE FRONTEND - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Vite requires VITE_ prefix for env vars to be exposed

# ===========================================
# DEPRECATED: LEGACY MONGODB BACKEND (Optional)
# ===========================================
# ⚠️ The MongoDB backend is DEPRECATED and should NOT be used for new deployments.
# The platform now uses Firebase (serverless) for better reliability and performance.
#
# Only set this if you're maintaining a legacy deployment.
# For new deployments, leave this empty and use Firebase (see below).
#
# Backend API URL (without trailing slash)
# Leave empty to use Firebase only (RECOMMENDED)
VITE_API_BASE=

# For legacy MongoDB backend only (NOT RECOMMENDED):
# VITE_API_BASE=https://snipe-api.onrender.com/api
# For local legacy backend:
# VITE_API_BASE=http://localhost:4000/api
#
# See BACKEND_REPLACEMENT.md for migration guide.

# ===========================================
# DEPRECATED: BACKEND AUTHENTICATION URL (Unused)
# ===========================================
# ⚠️ This variable is DEPRECATED and NOT USED in the current codebase.
# Admin authentication now uses Firebase Auth (see VITE_ADMIN_ALLOWLIST below).
# This reference is kept only for backward compatibility and will be removed in v3.0.
#
# DO NOT SET THIS VARIABLE - it has no effect.
# VITE_BACKEND_AUTH_URL=https://snipe-api.onrender.com/api/auth

# ===========================================
# OPTIONAL: APP CONFIGURATION
# ===========================================
# Site name
VITE_APP_NAME=OnchainWeb

# Site URL (for meta tags)
VITE_APP_URL=https://onchainweb.app

# ===========================================
# OPTIONAL: FEATURE FLAGS
# ===========================================
# Enable/disable features
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_DEBUG=false

# ===========================================
# REQUIRED: WALLETCONNECT CONFIGURATION
# ===========================================
# WalletConnect Project ID (REQUIRED for WalletConnect QR code connections)
# Get your free Project ID from: https://cloud.walletconnect.com
# Without this, WalletConnect feature will NOT work
VITE_WALLETCONNECT_PROJECT_ID=

# ===========================================
# CLOUDFLARE TURN SERVER CONFIGURATION
# ===========================================
# Cloudflare TURN server for WebRTC connections
# Improves peer-to-peer connection reliability through NAT and firewalls
# Get your credentials from: https://dash.cloudflare.com/
VITE_CLOUDFLARE_TURN_SERVER_NAME=
VITE_CLOUDFLARE_TURN_TOKEN_ID=
VITE_CLOUDFLARE_TURN_API_TOKEN=

# ===========================================
# FIREBASE CONFIGURATION (REQUIRED)
# ===========================================
# Get your Firebase config from: https://console.firebase.google.com
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
# Optional: Firebase Analytics Measurement ID (format: G-XXXXXXXXXX)
# Required for Google Analytics integration and consent mode
# Get from Firebase Console > Project Settings > General > Your apps > Web app
VITE_FIREBASE_MEASUREMENT_ID=

# ===========================================
# OPTIONAL: OTHER INTEGRATIONS
# ===========================================
# CoinGecko API (free tier works without key)
# VITE_COINGECKO_API_KEY=your-api-key

# Telegram Bot Integration (for customer service)
# Messages from customer service popup automatically forward to Telegram
# Bot Token from @BotFather
VITE_TELEGRAM_BOT_TOKEN=
# Chat ID where messages should be sent (your Telegram user ID or group ID)
VITE_TELEGRAM_CHAT_ID=

# ===========================================
# ADMIN CONFIGURATION (Optional but Recommended)
# ===========================================
# Enable admin and master routes for platform management
# Set to 'true' to enable admin access
VITE_ENABLE_ADMIN=false

# Admin route paths (customize if needed)
VITE_ADMIN_ROUTE=/admin
VITE_MASTER_ADMIN_ROUTE=/master-admin

# Comma-separated allowlisted admin emails (must match Firebase Auth emails)
# Example: master@admin.onchainweb.app,admin1@admin.onchainweb.app
# IMPORTANT: Create these accounts in Firebase Console > Authentication first
VITE_ADMIN_ALLOWLIST=

# SETUP INSTRUCTIONS:
# 1. Go to Firebase Console > Authentication > Users
# 2. Click "Add user" and create admin accounts with email/password
# 3. Use format: username@admin.onchainweb.app (or any custom domain)
# 4. Add those emails to VITE_ADMIN_ALLOWLIST (comma-separated)
# 5. Set VITE_ENABLE_ADMIN=true
# 6. Restart the dev server
# 7. Access via /admin or /master-admin routes

# ===========================================
# DEPOSIT ADDRESSES (OPTIONAL - has defaults)
# ===========================================
# Override default deposit addresses for supported networks
# If not set, the platform uses hardcoded defaults
VITE_DEPOSIT_BTC=
VITE_DEPOSIT_USDT_TRC20=
VITE_DEPOSIT_USDT_ERC20=

# ===========================================
# SECURITY CONFIGURATION (PRODUCTION REQUIRED)
# ===========================================
# Enable strict security checks in production
VITE_ENABLE_STRICT_AUTH=true
# Rate limit: requests per minute (used in Cloudflare Workers)
VITE_RATE_LIMIT_PER_MINUTE=100

# ===========================================
# FEATURE FLAGS (OPTIONAL)
# ===========================================
# Enable debug logging (only in development)
VITE_ENABLE_DEBUG=false
# Log level: debug, info, warn, error (default: error in production)
VITE_LOG_LEVEL=error
# Analytics
VITE_ENABLE_ANALYTICS=true

# ===========================================
# DEPOSIT ADDRESSES (REQUIRED FOR PRODUCTION)
# ===========================================
# Override default deposit addresses for supported networks
# CRITICAL: Set production addresses before deployment
VITE_DEPOSIT_BTC=
VITE_DEPOSIT_USDT_TRC20=
VITE_DEPOSIT_USDT_ERC20=

# ===========================================
# SECURITY CONFIGURATION (PRODUCTION REQUIRED)
# ===========================================
# Enable strict security checks in production
VITE_ENABLE_STRICT_AUTH=true
# Rate limit: requests per minute
VITE_RATE_LIMIT_PER_MINUTE=100
