{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "eslint:recommended",
  "ignorePatterns": [
    "Onchainweb/src/dataconnect-sdk/**",
    "Onchainweb/src/types/**"
  ],
  "overrides": [
    {
      "files": ["Onchainweb/src/**/*.ts", "Onchainweb/src/**/*.tsx"],
      "excludedFiles": "*"
    }
  ],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  }
}
