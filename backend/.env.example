# ============================================
# SNIPE BACKEND - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================================
# DATABASE
# ===========================================
# MongoDB connection string (Atlas or local)
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/snipe?retryWrites=true&w=majority

# ===========================================
# SERVER
# ===========================================
# Port the server runs on (Render uses PORT env)
PORT=4000

# ===========================================
# AUTHENTICATION
# ===========================================
# JWT secret for token signing (use a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Master account credentials (hardcoded admin)
MASTER_USERNAME=master
MASTER_PASSWORD=OnchainWeb2025!

# ===========================================
# OPTIONAL: CORS CONFIGURATION
# ===========================================
# Comma-separated allowed origins for CORS
# CORS_ORIGINS=https://onchainweb.app,https://www.onchainweb.app

# ===========================================
# OPTIONAL: FILE UPLOADS
# ===========================================
# Max upload size in bytes (default 50MB)
# MAX_UPLOAD_SIZE=52428800

# ===========================================
# OPTIONAL: RATE LIMITING
# ===========================================
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
